@model ProyectoInventarioBLL.Dtos.ProductoDto

<!-- Modal Crear Producto -->
<div class="modal fade" id="modalCrearProducto" tabindex="-1" aria-labelledby="modalCrearProductoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">

            <div class="modal-header modal-header-app">
                <h5 class="modal-title" id="modalCrearProductoLabel">Crear Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <p class="text-muted small mb-3">
                    Complete la información del producto y presione <strong>Guardar</strong> para registrarlo.
                </p>

                <form id="formCrearProducto" asp-controller="Productos" asp-action="CrearProducto" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción" />
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Precio" class="form-label"></label>
                        <input asp-for="Precio" class="form-control" placeholder="Ejemplo: 1000" />
                        <span asp-validation-for="Precio" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Stock" class="form-label"></label>
                        <input asp-for="Stock" class="form-control" placeholder="Cantidad en inventario" />
                        <span asp-validation-for="Stock" class="text-danger small"></span>
                    </div>

                    <div class="mb-0">
                        <label asp-for="EstaDisponible" class="form-label"></label>
                        <select asp-for="EstaDisponible" class="form-select" id="EstaDisponible">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span asp-validation-for="EstaDisponible" class="text-danger small"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarProducto">
                    Guardar
                </button>
            </div>

        </div>
    </div>
</div>
